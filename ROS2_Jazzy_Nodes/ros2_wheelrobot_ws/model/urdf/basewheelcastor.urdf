<?xml version="1.0"?>
<robot name="fk_wheelrobot">

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1" />
    </material>

    <material name="blue">
        <color rgba="0 0 0.5 1" />
    </material>
    
    <material name="lightgrey">
        <color rgba="0.8 0.8 0.8 1" />
    </material>    
    
    <material name="darkgrey">
        <color rgba="0.2 0.2 0.2 1" />
    </material>       
     
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>      
    
    <!-- base_link (required for Nav2) -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.145 0.1 0.085" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>
    
    <!-- base_footprint (projection of base_link on the ground) -->
    <!-- Required for Nav2 and Rviz2 -->
    <link name="base_footprint"/>   
    
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.0645" rpy="0 0 0"/>
    </joint>    
     
    <!-- Wheels (2 differential wheels) -->

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.0385"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="darkgrey" />
        </visual>
    </link>
    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="-0.0425 0.075 -0.0245" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
        
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.0385"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="darkgrey" />
        </visual>
    </link>     
    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="-0.0425 -0.075 -0.0245" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <!-- Castor wheel to keep the balance -->
    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.011"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="white" />
        </visual>
    </link>  
    
    <joint name="base_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel"/>
        <origin xyz="0.0525 0 -0.054" rpy="0 0 0"/>
    </joint>  
             
</robot>
